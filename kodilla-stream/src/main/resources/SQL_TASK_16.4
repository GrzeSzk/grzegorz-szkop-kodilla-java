SELECT ID,SUMMARY FROM ISSUES;

SELECT ISSUES.DESCRIPTION, ISSUESLISTS.NAME
FROM ISSUES
JOIN ISSUESLISTS ON ISSUES.ISSUESLIST_ID = ISSUESLISTS.ID;

SELECT ISSUES.DESCRIPTION, USERS.FIRSTNAME, USERS.LASTNAME
FROM ISSUES
JOIN USERS ON ISSUES.USER_ID_ASSIGNEDTO = USERS.ID;

SELECT USERS.FIRSTNAME, USERS.LASTNAME, COUNT(*) AS TASKS_NUMBER
FROM USERS JOIN ISSUES ON USERS.ID = ISSUES.USER_ID_ASSIGNEDTO
GROUP BY USERS.ID;